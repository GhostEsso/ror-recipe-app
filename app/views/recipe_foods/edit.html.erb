<h1>Edit Ingredient 🫚 🧅 🌶️ 🍆 🧀</h1>

<% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
  <% end -%>

<%= form_with(url: recipe_recipe_food_path, model: @recipe_food) do |form| %>
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: 1, value: 1, required: true %>
    <%= form.collection_select :food_id, current_user.food, :id, :name, { include_blank: false } %> 
    <%= form.submit "Update" %>
<% end %>
