<h1>Public Recipes <br><br>🥙🍔🍟😋</h1>

<ul class="list-group">
  <% @recipes_with_food_info.each do |data| %>
    <li class="list-group-item list-group-item-action container">
      <div class='row align-items-center'>
        <div class='col'>
          <%= link_to recipe_path(data[:recipe]), class:'text-decoration-none' do %>
            <h2><%= data[:recipe].name %></h2>
            <p>by <%= data[:recipe].user.name %></p>
          <% end %>
        </div>
        <div class='col container'>
          <div class='row'>
            <div class='col'>
              <p>Total food items: <%= data[:total_food_items] %></p>
              <p>Total price: <%= data[:total_price] %></p>
            </div>
            <div class='col d-flex justify-content-end align-items-center'>
              <% if can? :destroy, data[:recipe] %>
                <%= form_with model: recipe, url: recipe_path(data[:recipe]), method: :delete do |f| %>
                  <%= f.submit "Remove", class: 'btn btn-danger' %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
