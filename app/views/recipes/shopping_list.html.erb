<h1>Shopping list</h1>
<h3>Recipe: <%= @recipe.name %></h3>
<div id='recipe-info' class='d-flex justify-content-between align-items-center'>
  <p>Amount of food items to buy: <%= @recipe_data[:total_food_items] %> </p>
  <p>Total value of food needed: $<%= @recipe_data[:total_price] %></p>
</div>

<table class="table">
  <thead class="border-b">
    <tr>
      <th class='col'>Food</th>
      <th class='col'>Quantity</th>
      <th class='col'>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe.recipe_foods.each do |recipe_food| %>
      <tr>
        <th class='food-name' scope='row' ><%= recipe_food.food.name %></th>
        <td class='food-quantity' ><%= recipe_food.food.quantity %> <%= recipe_food.food.measurement_unit %></td>
        <td class='food-price' >$<%= (recipe_food.food.price*recipe_food.food.quantity).round(2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
